		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.1
		color: (0, 0, 0, 1)
	Button:
		id: efeito_3
		size_hint_x: None
		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.2
		on_press: app.root.get_screen('tocar').stopsound()
	Label:
		text: 'Stop'
		size_hint_x: None
		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.1
		color: (0, 0, 0, 1)

