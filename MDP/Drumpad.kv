<Pad>:
	size_hint_x: None
	width: self.parent.width * 0.25
	size_hint_y: None
	height: self.parent.height
	on_press: self.playsound(self.id)
	
<PadBanco>:
	size_hint_x: None
	width: self.parent.width * 0.25
	pos_hint: {'center_x': 0.5}
	size_hint_y: None
	height: self.parent.height * 0.25

<Infos>:
	size_hint_x: None
	width: self.parent.width
	size_hint_y: None
	height: self.parent.height * 0.3
	
	canvas.before:
		Color:
			rgba: 0.2, 0.2, 0.9, 1.0
		Rectangle:
			size: self.size
			pos: self.pos
<Slid>:
	orientation: 'vertical'
	size_hint_x: None
	width: self.parent.width * 0.2
	size_hint_y: None
	height: self.parent.height * 0.75
	min: 0.50
	max: 1
	set: 0.10

<Efeitos>:
	orientation: 'vertical'
	Button:
		id: efeito_1
		size_hint_x: None
		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.2
	Label:
		text: 'Effect 1'
		size_hint_x: None
		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.1
		color: (0, 0, 0, 1)
	Button:
		id: efeito_2
		size_hint_x: None
		width: self.parent.width * 0.8
		size_hint_y: None
		height: self.parent.height * 0.2
	Label:
