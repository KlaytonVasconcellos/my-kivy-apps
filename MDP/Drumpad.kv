<Tocar>:
	name: "tocar"
	
	Label:
		id: banco_atual
		text: 'BancoA'
		opacity: 0

	BoxLayout:
		id: box_full
		canvas.before:
			Color:
				rgba: 0.9, 0.9, 0.9, 1.0
			Rectangle:
				size: self.size
				pos: self.pos

		BoxLayout:
			id: box_efeitos
			orientation: 'vertical'
			size_hint_x: None
			width: self.parent.width * 0.4
			Infos:		
				Label:
					id: banco_atual
					text: 'BancoA'
					size_hint_y: None
					height: self.parent.height * 0.3
					opacity: 1
					
			GridLayout:
				id: box_bancos
				cols: 4
				rows: 2
				size_hint_x:
				width: self.parent.width
				
				PadBanco:
					text: 'A'
					on_press: root.BancoA()
								
				PadBanco:
					text: 'B'
					on_press: root.BancoB()
					
				PadBanco:
					text: 'C'
					on_press: root.BancoC()
					
				PadBanco:
					text: 'D'
					on_press: root.BancoD()
				
				#PadBanco:
				#	text: 'E'
				#	on_press: root.BancoB()
						
				Slid:
					id: slid1
					value: 1
					min: 0.50
					max: 1
					set: 0.10

				Slid:
					id: slid2
					min: 0
					max: 1
					set: 1
					value: 1

				Efeitos:

				Efeitos2:
					id: ef2

		BoxLayout:
			id: box_pads
			orientation: 'vertical'
			size_hint_x: None
			width: self.parent.width - root.ids.box_efeitos.width		

